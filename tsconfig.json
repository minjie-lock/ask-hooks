{
  "compilerOptions": {
    "composite": true,
    "target": "ES2024",
    "useDefineForClassFields": true,
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "commonjs",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    
    "allowImportingTsExtensions": true,
    "resolveJsonModule": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "types": [
      "@types/react",
      "@types/react-dom"
    ],
    "paths": {
      "*": [
        "types/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    
    /* Linting */
  },
  "files": [
    "src/hooks/index.ts"
  ],
  "include": [
    "src/**/*",
    "rslib.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}